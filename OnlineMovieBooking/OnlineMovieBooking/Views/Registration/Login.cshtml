@model OnlineMovieBooking.Models.User

@{
    ViewBag.Title = "Login";
}



<style>
    table, td {
        padding: 10px;
    }
</style>
<h2>Login</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>user name</td>
            <td>@Html.TextBoxFor(user => user.Email)</td>
        </tr>
        <tr>
            <td>password</td>
            <td>@Html.PasswordFor(user => user.Password)</td>
        </tr>
    </table>
    <input type="submit" class="btn btn-primary" value="login" />

}

<span>Don't have an account?</span>
@Html.ActionLink("signup", "SignUp")