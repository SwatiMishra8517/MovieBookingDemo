@model OnlineMovieBooking.Classes.UserLogin

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/LoginStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card custom-card login-div">
            <div class="card-header text-white">
                <h3 class="text-white">Login</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(user => user.UserName, new { @class = "text-white" })
                    @Html.TextBoxFor(user => user.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(user => user.UserName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "text-white" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary rounded-0">Login</button><br />
                    <span class="text-white">Don't have an account?</span>
                    @Html.ActionLink("signup", "SignUp")
                </div>

            </div>
        </div>
    }
</body>
</html>
